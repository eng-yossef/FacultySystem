@model IEnumerable<FacultySystem.Models.Course>

<h2 class="text-center mb-4">Courses List</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">Add Course</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg h-100">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@item.Title</h5>
                    <p class="card-text"><strong>Credit Hours:</strong> @item.CreditHours</p>
                    <p class="card-text"><strong>Instructor:</strong> @item.Instructor.Name</p>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                        <a asp-action="AddStudent" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-user-plus"></i> Add Student
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
