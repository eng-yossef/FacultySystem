@model IEnumerable<FacultySystem.Models.Course>
@{
    ViewData["Title"] = "Courses Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-book-open me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>Add New Course
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle me-2"></i>No courses found. Create your first course!
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm hover-shadow transition-all">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0 fw-bold">
                                <i class="fas fa-bookmark me-2"></i>@item.Title
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-clock text-secondary me-2"></i>
                                    <span><strong>Credit Hours:</strong> @item.CreditHours</span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-chalkboard-teacher text-secondary me-2"></i>
                                    <span><strong>Instructor:</strong> @item.Instructor?.Name</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex flex-wrap gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-primary flex-grow-1">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-info flex-grow-1">
                                    <i class="fas fa-info-circle me-1"></i>Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger flex-grow-1">
                                    <i class="fas fa-trash-alt me-1"></i>Delete
                                </a>
                                <a asp-action="AddStudent" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-warning flex-grow-1">
                                    <i class="fas fa-user-plus me-1"></i>Add Student
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        .hover-shadow:hover {
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }

        .card {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .card-header {
            border-radius: 0 !important;
        }
    </style>
}

@section Scripts {
    <script>
        // Add any JavaScript functionality here if needed
    </script>
}