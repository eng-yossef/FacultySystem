@model FacultySystem.Models.Trainee
@{
    ViewData["Title"] = "Confirm Trainee Deletion";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow rounded-4 overflow-hidden">
                <!-- Card Header -->
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]
                        </h2>
                        <a asp-action="Index" class="btn btn-sm btn-light">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="fas fa-user-slash fa-4x text-danger mb-3"></i>
                        <h3 class="fw-bold mb-3">Confirm Deletion</h3>
                        <p class="lead">Are you sure you want to permanently delete <strong>@Model.Name</strong>?</p>
                    </div>

                    <div class="alert alert-warning">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle me-3 fa-2x"></i>
                            <div>
                                <h5 class="alert-heading mb-2">Warning!</h5>
                                <p class="mb-0">This action cannot be undone. All course enrollments for this trainee will be removed.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Trainee Details -->
                    <div class="bg-light p-3 rounded-2 mb-4 text-start">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Name:</strong> @Model.Name</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Age:</strong> @Model.Age</p>
                            </div>
                            <div class="col-md-12">
                                <p class="mb-0"><strong>Department:</strong> @Model.Department?.Name</p>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger px-4"
                                    onclick="return confirm('Are you absolutely sure you want to delete @Model.Name? This will remove all their course enrollments.');">
                                <i class="fas fa-trash-alt me-2"></i>Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.75rem;
        }

        .card-header {
            border-radius: 0 !important;
        }

        .fw-bold {
            font-weight: 600;
        }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffeeba;
        }

        .btn-danger {
            transition: all 0.3s ease;
        }

            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
            }
    </style>
}