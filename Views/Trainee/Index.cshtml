@model IEnumerable<FacultySystem.Models.Trainee>
@{
    ViewData["Title"] = "Trainees Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-users me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-user-plus me-2"></i>Add New Trainee
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-4">
            <i class="fas fa-info-circle me-2"></i>No trainees found. Add your first trainee!
        </div>
    }
    else
    {
        <div class="table-responsive rounded-3 shadow-sm">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-primary">
                    <tr>
                        <th><i class="fas fa-user me-2"></i>Name</th>
                        <th><i class="fas fa-calendar-alt me-2"></i>Age</th>
                        <th><i class="fas fa-building me-2"></i>Department</th>
                        <th class="text-end"><i class="fas fa-cogs me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle fw-semibold">@item.Name</td>
                            <td class="align-middle">@item.Age</td>
                            <td class="align-middle">
                                <span class="badge bg-secondary">@item.Department?.Name</span>
                            </td>
                            <td class="align-middle text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary"
                                       title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-info"
                                       title="Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Delete"
                                    >
                                    <i class="fas fa-trash-alt"></i>
                                    </a>
                                    <a asp-action="Enroll" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-warning"
                                       title="Enroll">
                                        <i class="fas fa-book-open"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Styles {
    <style>
        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            vertical-align: middle;
        }

        .table td {
            vertical-align: middle;
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.35em 0.65em;
        }

        .fw-semibold {
            font-weight: 500;
        }
    </style>
}