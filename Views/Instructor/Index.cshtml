@model IEnumerable<FacultySystem.Models.Instructor>

<h2 class="text-center mb-4">Instructors List</h2>

<div class="text-center mb-3">
    <a asp-action="Create" class="btn btn-success btn-lg">Add Instructor</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card shadow-lg mb-4" style="height: 100%; border-radius: 15px; overflow: hidden;">
                <img src="@item.ImageUrl" class="card-img-top img-fluid" style="height: 300px; object-fit: cover;" alt="@item.Name">
                <div class="card-body d-flex flex-column justify-content-between text-center">
                    <div>
                        <h4 class="card-title">@item.Name</h4>
                        <p class="card-text"><strong>Specialization:</strong> @item.Specialization</p>
                        <p class="card-text"><strong>Department:</strong> @item.Department?.Name</p>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-2">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info me-2">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
