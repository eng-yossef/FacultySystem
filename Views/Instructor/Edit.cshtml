@model FacultySystem.Models.Instructor

<h2>Edit Instructor</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Specialization</label>
        <input asp-for="Specialization" class="form-control" />
    </div>

    <div class="form-group">
        <label>Department</label>
        <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-control" required>
            <option value="">-- Select Department --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Upload New Image</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <p>Current Image:</p>
        <img src="@Model.ImageUrl" alt="Instructor Image" style="width:150px; height:auto; border-radius:10px;" />
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
