@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <div class="d-flex align-items-center">
            <span class="badge bg-primary me-3">Welcome, @User.Identity.Name</span>
            <a asp-action="Create" class="btn btn-primary me-2">
                <i class="fas fa-plus-circle"></i> Create Role
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Role List</h5>
            <div>
                <a asp-action="Assign" class="btn btn-sm btn-success me-2">
                    <i class="fas fa-user-plus"></i> Assign Role
                </a>
                <a asp-action="Remove" class="btn btn-sm btn-warning">
                    <i class="fas fa-user-minus"></i> Remove Role
                </a>
            </div>
        </div>

        <div class="card-body">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Role Name</th>
                            <th width="150px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    <span class="badge bg-secondary">@role.Name</span>
                                </td>
                                <td>
                                    <form asp-action="Delete" method="post">
                                        <input type="hidden" name="id" value="@role.Id" />
                                        <input type="hidden" name="roleName" value="@role.Name" />
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete the role: @role.Name?');">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-4">No roles found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            overflow: hidden;
        }

        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
        }

        .badge {
            font-size: 0.85rem;
            padding: 0.35em 0.65em;
        }
    </style>
}

@section Scripts {
    <script>
        // Add fade out effect for alerts
        $(document).ready(function() {
            setTimeout(function() {
                $(".alert").fadeTo(500, 0).slideUp(500, function(){
                    $(this).remove();
                });
            }, 3000);
        });
    </script>
}